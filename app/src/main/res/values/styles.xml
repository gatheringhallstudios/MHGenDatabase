<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!-- change to .NoActionBar when integrating Toolbar-->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


           -->


    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/background_color</item>

        <!--<item name="android:colorPrimary">@color/primary_color</item>-->
        <!--<item name="android:colorPrimaryDark">@color/dark_primary_color</item>-->
        <!--<item name="android:colorAccent">@color/accent_color</item>-->

        <!--Appcompat Theme Omits the android prefix -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="actionDropDownStyle">@style/DropDownNavStyle</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>

        <item name="actionModeBackground">@drawable/primary_drawable</item>
        <item name="actionModeSplitBackground">@drawable/primary_drawable</item>
        <item name="actionBarItemBackground">@drawable/primary_drawable</item>

        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNavStyle</item>

        <item name="android:actionModeBackground">@drawable/primary_drawable</item>
        <item name="android:actionModeSplitBackground">@drawable/primary_drawable</item>
        <item name="android:actionBarItemBackground">@drawable/primary_drawable</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>

        <item name="android:clipToPadding">false</item>

        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="android:listDivider">@drawable/divider_solid</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/text_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingRight">@dimen/margin_large</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SpinnerStyle" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:textAppearance">@style/SpinnerItemTextAppearance</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/text_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="SpinnerItemStyle">
        <item name="android:minWidth">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SpinnerItemTextAppearance" parent="AppTheme">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/AppTheme">
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:background">@drawable/primary_drawable</item>
    </style>

    <style name="DropDownListViewStyle" parent="@style/AppTheme">
        <item name="android:listSelector">@drawable/primary_drawable</item>
    </style>

    <style name="DropDownNavStyle" parent="@style/AppTheme">
        <item name="android:background">@drawable/primary_drawable</item>
        <item name="android:popupBackground">@drawable/primary_drawable</item>
        <item name="android:dropDownSelector">@drawable/primary_drawable</item>
    </style>

    <style name="ButtonStyle" parent="@style/AppTheme">
        <item name="android:background">@drawable/clicked_states_primary</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:height">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="HorizontalDividerFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="HorizontalDivider" parent="HorizontalDividerFull">
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
    </style>

    <!-- Divides section like titles and column label sections -->
    <style name="SectionDivider" parent="HorizontalDividerFull"/>

    <!-- Begin styles for lists -->

    <style name="list">
        <item name="android:background">@drawable/clicked_states_white</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:id">@android:id/list</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:animationCache">false</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="damage_table_item">
        <item name="android:layout_height">32dp</item>
    </style>

    <!-- Used for high contrast header styles. Applied to TextViews -->
    <style name="section_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:background">@color/subheading_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="expandable_group" parent="section_header"/>

    <style name="list_item_basic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="list_item">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- JOE: Results in a more dense list. Adheres to the android material design spec. -->
    <style name="list_item_dense">
        <item name="android:clickable">true</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="list_sub_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="list_item_large" parent="@style/list_item">
        <item name="android:layout_height">64dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="text_base">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="text_large" parent="text_base">
        <item name="android:textColor">@color/color_states_enabled</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_medium" parent="text_base">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_medium.color_states_enabled">
        <item name="android:textColor">@color/color_states_enabled</item>
    </style>

    <style name="text_medium_alt" parent="text_base">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_small" parent="text_base">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_small_secondary" parent="text_base">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- If a value label is paired next to text_medium -->
    <style name="text_medium_value" parent="text_base">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="hyper_badge">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/textview_badge_hyper</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="key_badge">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/textview_badge_key</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="urgent_badge">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/textview_badge_urgent</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="text_small.color_states_enabled">
        <item name="android:textColor">@color/color_states_enabled</item>
    </style>

    <style name="ammo_default" parent="text_small_secondary">
        <item name="android:textColor">@color/text_color_unavailable</item>
    </style>

    <style name="main_image">
        <item name="android:layout_height">@dimen/image_size_medium</item>
        <item name="android:layout_width">@dimen/image_size_medium</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="extra_large_image">
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_width">96dp</item>
    </style>

    <style name="main_image_large" parent="main_image">
        <item name="android:layout_height">@dimen/image_size_large</item>
        <item name="android:layout_width">@dimen/image_size_large</item>
    </style>

    <style name="large_image">
        <item name="android:layout_height">@dimen/image_size_large</item>
        <item name="android:layout_width">@dimen/image_size_large</item>
    </style>

    <style name="small_image">
        <item name="android:layout_height">@dimen/image_size_small</item>
        <item name="android:layout_width">@dimen/image_size_small</item>
    </style>

    <style name="tiny_image">
        <item name="android:layout_height">@dimen/image_size_xsmall</item>
        <item name="android:layout_width">@dimen/image_size_xsmall</item>
    </style>


    <!-- End styles for elevated lists -->

    <!-- Styles for weapon/item detail pages -->
    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_full_height</item>
        <item name="android:minHeight">@dimen/title_full_height</item>
    </style>

    <!-- TODO: Only used by palic weapon detail. Phase it out -->
    <style name="title_bar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="cell_listitem_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cell_listitem_alt_label" parent="cell_listitem_label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="cell_column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="flexDirection">column</item>
        <item name="alignItems">center</item>
    </style>

    <style name="cell_column_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_full_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="justifyContent">space_between</item>
        <item name="alignItems">center</item>
    </style>

    <style name="cell_column_row_centered" parent="@style/cell_column_row">
        <item name="justifyContent">space_evenly</item>
    </style>

    <style name="cell_column_value">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:textColor">@color/weapon_header_property_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cell_column_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/weapon_header_property_color</item>
    </style>

    <style name="cell_column_solovalue">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/weapon_header_property_color</item>
    </style>

    <style name="detail_value_text" parent="text_medium">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/weapon_property_color</item>
    </style>

    <style name="detail_value_medium_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/weapon_header_property_color</item>
    </style>

    <style name="detail_header_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/weapon_header_property_color</item>
    </style>

    <style name="detail_subheader_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/weapon_header_property_color</item>
    </style>

    <style name="detail_value_element_text" parent="text_small">
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/weapon_header_property_color</item>
    </style>

    <!-- Style for ammo table -->
    <style name="ammo_table_header_row">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="ammo_table_row">
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!-- Style for list section header -->
    <style name="section_header_mini" parent="text_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

</resources>